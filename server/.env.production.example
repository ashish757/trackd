# Production Environment Variables Template
# Copy this to .env.production and fill in the values

#==========================================================
# CRITICAL - REQUIRED VARIABLES
#==========================================================

# PostgreSQL database connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD@db:5432/trackd

# Secret key for JWT access tokens (CHANGE THIS - min 32 chars)
JWT_ACCESS_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# Secret key for JWT refresh tokens (CHANGE THIS - min 32 chars)
JWT_REFRESH_SECRET=CHANGE_ME_TO_ANOTHER_SECURE_RANDOM_STRING_MIN_32_CHARS

# Secret key for OTP tokens (CHANGE THIS - min 32 chars)
JWT_OTP_SECRET=CHANGE_ME_TO_ANOTHER_SECURE_RANDOM_STRING_FOR_OTP

# Resend email service API key
RESEND_API_KEY=re_your_resend_api_key_here

# TMDB API access token (Bearer token)
TMDB_ACCESS_TOKEN=your_tmdb_bearer_token_here

# Google OAuth client ID
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Google OAuth client secret
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google OAuth callback URL (update with your domain)
GOOGLE_CALLBACK_URL=https://yourdomain.com/api/auth/google/callback

# Production frontend URL
FRONTEND_URL=https://yourdomain.com

# Environment type
ENV=production

#==========================================================
# OPTIONAL - RECOMMENDED VARIABLES
#==========================================================

# JWT token expiration times
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookie settings
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Application port
PORT=3000

#==========================================================
# DATABASE CREDENTIALS (for docker-compose.yml)
#==========================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD
POSTGRES_DB=trackd
POSTGRES_PORT=5432

# Backend port mapping
BACKEND_PORT=3000

