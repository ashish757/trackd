# Trackd - Environment Variables Configuration
# Copy this file to .env and fill in the values
# Last updated: 2025-12-13

#==========================================================
# CRITICAL - REQUIRED VARIABLES
#==========================================================

# PostgreSQL database connection string
DATABASE_URL=

# Secret key for JWT access tokens
# JWT_ACCESS_SECRET must be at least 32 characters long
JWT_ACCESS_SECRET=

# Secret key for JWT refresh tokens
# JWT_REFRESH_SECRET must be at least 32 characters long
JWT_REFRESH_SECRET=

# Secret key for OTP tokens
# JWT_OTP_SECRET must be at least 32 characters long
JWT_OTP_SECRET=

# Resend email service API key
# RESEND_API_KEY must be a valid Resend API key (starts with re_)
RESEND_API_KEY=

# TMDB API access token (Bearer token)
TMDB_ACCESS_TOKEN=

# Google OAuth client ID
# GOOGLE_CLIENT_ID must be a valid Google OAuth client ID
GOOGLE_CLIENT_ID=

# Google OAuth client secret
GOOGLE_CLIENT_SECRET=

# Google OAuth callback URL
# GOOGLE_CALLBACK_URL must be a valid HTTP(S) URL
GOOGLE_CALLBACK_URL=

# Production frontend URL
# FRONTEND_URL must be a valid HTTPS URL for production
FRONTEND_URL=

# Environment type (production/development)
# ENV must be either "production" or "development"
ENV=

#==========================================================
# OPTIONAL - RECOMMENDED VARIABLES
#==========================================================

# Development frontend URL
# Default: http://localhost:5173
# FRONTEND_URL_DEV should be a valid HTTP(S) URL
FRONTEND_URL_DEV=http://localhost:5173

# Server port number
# Default: 3000
# PORT must be a valid port number (1-65535)
PORT=3000

# TMDB API key (v3 API - legacy, use ACCESS_TOKEN instead)
TMDB_API_KEY=

# Bcrypt salt rounds for password hashing
# Default: 10
# PASSWORD_SALT_ROUNDS should be between 10-15 for security
PASSWORD_SALT_ROUNDS=10


