FROM node:22

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose React dev server port
EXPOSE 5173

# Start Vite with host flag to allow external access (required for Docker)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
